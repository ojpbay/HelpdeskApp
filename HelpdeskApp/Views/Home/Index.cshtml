@model IEnumerable<HelpdeskApp.Models.DataItem>

@{
    ViewData["Title"] = "Index";
}

<h2>Search helpdesk blah blah</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm("Search", "Home", FormMethod.Get, new { id = "searchForm", @class = "form-inline" }))
{
    <div class="form-group">
            @Html.TextBox("AssignmentGroupFilter", "", new { @class = "form-control", @placeholder = "Assignment group" })
    </div>

    <div class="form-group">
            @Html.TextBox("DescriptionFilter", "", new { @class = "form-control", @placeholder = "Description" })
    </div>

    <div class="form-group">
            @Html.TextBox("ContactFilter", "", new { @class = "form-control", @placeholder = "Contact" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Search" />

        @Html.ActionLink("Clear", "Index", "Home")
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssignmentGroup.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignmentGroup.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

